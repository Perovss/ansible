{% for host in groups[target_group] -%}
remote {{host }} {{ openvpn_port}}
{% endfor %}
remote-random
client
dev {{openvpn_dev}}_{{mail_preffix}}
proto {{openvpn_proto}}
persist-key
persist-tun
nobind
{{openvpn_comp}}
verb 2
cipher {{openvpn_cipher}}
remote-cert-tls server
