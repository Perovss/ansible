ca [inline]
cert [inline]
key [inline]
tls-auth [inline] 1
<ca>
{{openvpn_ca.stdout}}
</ca>
<cert>
{{openvpn_client_cert.stdout}}
</cert>
<key>
{{openvpn_client_key.stdout}}
</key>
<tls-auth>
{{openvpn_tls_auth.stdout}}
</tls-auth>